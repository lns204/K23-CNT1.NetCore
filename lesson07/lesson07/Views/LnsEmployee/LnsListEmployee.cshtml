@model List<lesson07.Models.LnsEmployee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <a href="@Url.Action("LnsCreate", "LnsEmployee")" class="btn btn-primary mb-3">Thêm nhân viên mới</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ và Tên</th>
                <th>Email</th>
                <th>Ngày sinh</th>
                <th>Số điện thoại</th>
                <th>Lương</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.LnsID</td>
                    <td>@employee.LnsName</td>
                    <td>@employee.LnsEmail</td>
                    <td>@employee.LnsBirthDay.ToString("dd/MM/yyyy")</td>
                    <td>@employee.LnsPhone</td>
                    <td>@employee.LnsSalary.ToString("N0")</td>
                    <td>@(employee.LnsStatus ? "Hoạt động" : "Không hoạt động")</td>
                </tr>
            }
        </tbody>
    </table>
</div>