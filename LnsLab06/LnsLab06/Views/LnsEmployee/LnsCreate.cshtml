@model LnsLab06.Models.LnsEmployee

@{
    ViewData["Title"] = "Thêm nhân viên mới";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <form asp-action="LnsCreate" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group mb-3">
            <label for="LnsName" class="form-label">Họ và Tên</label>
            <input asp-for="LnsName" class="form-control" placeholder="Nhập họ và tên" required />
            <span asp-validation-for="LnsName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="LnsEmail" class="form-label">Email</label>
            <input asp-for="LnsEmail" class="form-control" type="email" placeholder="Nhập email" required />
            <span asp-validation-for="LnsEmail" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="LnsBirthDay" class="form-label">Ngày sinh</label>
            <input asp-for="LnsBirthDay" class="form-control" type="date" required />
            <span asp-validation-for="LnsBirthDay" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="LnsPhone" class="form-label">Số điện thoại</label>
            <input asp-for="LnsPhone" class="form-control" placeholder="Nhập số điện thoại" required />
            <span asp-validation-for="LnsPhone" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="LnsSalary" class="form-label">Lương</label>
            <input asp-for="LnsSalary" class="form-control" type="number" step="0.01" placeholder="Nhập lương" required />
            <span asp-validation-for="LnsSalary" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="LnsStatus" class="form-label">Trạng thái</label>
            <select asp-for="LnsStatus" class="form-control" required>
                <option value="true">Hoạt động</option>
                <option value="false">Không hoạt động</option>
            </select>
            <span asp-validation-for="LnsStatus" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
        <a href="@Url.Action("LnsListEmployee", "LnsEmployee")" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}