                <input asp-for="LnsBirthDay" class="form-control" />
                <span asp-validation-for="LnsBirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LnsPhone" class="control-label"></label>
                <input asp-for="LnsPhone" class="form-control" />
                <span asp-validation-for="LnsPhone" class="text-danger"></span>
