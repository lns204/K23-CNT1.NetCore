                <label asp-for="LnsID" class="control-label"></label>
                <input asp-for="LnsID" class="form-control" readonly />
                <span asp-validation-for="LnsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LnsName" class="control-label"></label>
                <input asp-for="LnsName" class="form-control" />
                <span asp-validation-for="LnsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LnsEmail" class="control-label"></label>
